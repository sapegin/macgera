transition(p, d, t)
    transition-property: p;
    transition-duration: d;
    transition-timing-function: t;

border_radius(a, b, c, d)   
    border-radius: a b c d;

border_radius_all(a)
    border-radius: a;

inline_middle()
    display inline-block
    vertical-align middle

inline_top()
    display inline-block
    vertical-align top

box()
    box-sizing border-box

text_color = #303030
border_dashed = 1px dashed rgba(63, 11, 11, 0.3);
border_solid = 1px solid rgba(63, 11, 11, .1);
border_solid_posts = 1px solid rgba(117, 117, 117, 0.4);
text_shadow = 1px 1px 3px white
link_color = #2980b9
in_post_title = #358340
post_background = rgba(255, 255, 255, 1)

body
    font: 150%/160% Georgia, serif
    padding 0
    margin 0
    color text_color
    background #ecf0f1

h1, h2, h3, h4, h5
    font-weight normal
    line-height 1

a
    color link_color
    transition(all, 0.3s, ease)
    // border_radius_all(.2em)
    &:hover
        // background link_color
        // color white
        text-decoration none

img
    max-width 100%
    display block
    text-align center
    margin auto

.if
    position relative
    padding-bottom 56.25%
    padding-top 30px
    height 0
    overflow hidden
    iframe
    object
    embed
        position absolute
        top 0
        left 0
        width 100%
        height 100%

.tweet
    margin 1em 0
    iframe
        margin auto !important

.icon
    font-family icons
    text-decoration none

body > header
    margin 1em 10% 1em 10%
    text-align center
    .portrait
        width 8%
        margin auto
        img
            max-width 100%
            border_radius_all(100%)
            border 3px solid white
    h2
        font-size 1.4em
        margin-top 0
        margin-bottom 0
        position relative
        a
            color text_color
            text-decoration none
            &:hover
                text-decoration underline
    h3
        font-size 1em
        margin-top 0
        margin-bottom 0
    ul
        margin 0
        padding 0
        li
            inline_middle()
            padding 0
            margin-left -.3em
            &:after
                content '\272A'
                margin 0 .4em
                inline_middle()
                font-size .7em
                color #C2C2C2
            &:nth-last-child(1)
                &:after
                    content none
            a
                font-size .8em
ul.social
    li
        margin-right .5em
        &:nth-last-child(1)
            margin-right 0
        &:after
            content none
        a.icon
            inline_middle()
            box()
            width 1.4em
            height 1.4em
            line-height 1
            padding .2em
            color #a3a3a3
            text-shadow 1px 1px 2px #fff
            border_radius_all(.2em)
            &:hover
                color black
                


body > footer
    margin 1em 20% 1em 20%
    text-align center
    .icon
        font-size .8em

.pagination
    padding .5em 20% 0 20%
    text-align center
    ul
        padding 0
        margin-bottom 0
        li
            display inline-block
            margin 0 auto
            width 1.5em
            height 1.5em
            background white
            border-radius .2em
            a
                display block
                width 1.5em
                height 1.5em
                border-radius .2em
                text-decoration none
                &:hover
                    background link_color
                    color white
                    text-decoration none

.tags
.date
.meta_text
    font-size .7em
    font-style italic

.copyrights
    font-size .7em
    font-style italic
    &:before
        content "\00a9"
        margin-right .5em

.posts_list
    margin 0 20% 2em 20%
    background #fff
    border_radius_all(.4em)
    text-align center
    h3
        padding-top .5em
        margin-bottom 0
    ul
        padding 0
        margin-top .5em
        li
            box()
            padding .1em
            list-style none
            border-bottom border_solid
            &:nth-child(1)
                border-top border_solid
            &:nth-last-child(1)
                border-bottom none
            .date
                color #9B9B9B
            .tags
                font-size .6em
            h1
                font-size 1em
                margin 0
                a
                    text-decoration none


.posts
    .post
        margin-bottom 1em
        border-bottom border_solid_posts
        &:nth-last-child(1)
            margin-bottom 0

.post
    box()
    margin 0 10% 0 10%
    padding 1.2em
    background post_background
    border_radius_all(.2em)
    border-bottom border_solid_posts
    header
        text-align center
        h1
            font-size 1.4em
            margin 0
            a
                color text_color
                text-decoration none
                &:hover
                    color link_color
                    text-decoration underline
                    background none
    article
        h2
        h3
        h4
        h5
            color in_post_title
            text-align center
        table
            width 100%
            margin auto
            margin-bottom 1em
            tr
                th
                    font-weight bold
                th
                td
                    text-align center
                    vertical-align middle
                    padding .2em
                    margin 0
                    background #ecf0f1
                &:hover
                    td
                        background #d5d5d5
        blockquote
            margin-left 0
            margin-right 0
            padding .3em 2em
            background #ecf0f1
            border-bottom border_solid
            border-top border_solid
        figure
            margin 0
            figcaption
                margin-top 1em
    footer
        .tags
            text-align center


@media only screen and (min-device-width : 320px) and (max-device-width : 480px)

    body
        font-size 260%

    body > header
        padding .5em 5% 1em 5%
        .portrait
            width 20%

    body > footer
        padding .5em 5% 1em 5%

    .post
        box()
        margin 0 2% 0 2%
        article
            font-size 1.2em

    .pagination
        padding .5em 5% .5em 5%

@media only screen and (min-device-width : 768px) and (max-device-width : 1024px)

    body
        font-size 150%

    body > header
        padding .5em 10% 1em 10%
        .portrait
            width 20%

    body > footer
        padding .5em 10% 1em 10%

    .post
        box()
        margin 0 6% 0 6%

    .pagination
        padding .5em 10% .5em 10%